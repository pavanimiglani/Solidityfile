pragma solidity ^0.8.0;

library ArrayUtils {
    function addElement(uint[] storage arr, uint element) internal {
        arr.push(element);
    }

    function removeElement(uint[] storage arr, uint element) internal {
        for (uint i = 0; i < arr.length; i++) {
            if (arr[i] == element) {
                arr[i] = arr[arr.length - 1];
                arr.pop();
                break;
            }
        }
    }
}
